{
  "name": "pack-it-up",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "NSS Frontend Capstone Project - inventory CRUD app",
  "homepage": "https://cheor.github.io/pack-it-up",
  "author": "CheoR",
  "keywords": [
    "inventory, CRUD, REST API"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:CheoR/pack-it-up.git"
  },
  "dependencies": {
    "env-cmd": "^10.1.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3"
  },
  "scripts": {
    "start": "env-cmd -f .env.prod react-scripts start server.js",
    "start-local": "env-cmd -f .env.local react-scripts start server.js",
    "build": "CI=false && env-cmd -f .env.prod react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "npx nodemon server.js",
    "lint": "./node_modules/.bin/eslint --no-error-on-unmatched-pattern './src/**/*.js*'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.2.3",
    "json-server": "^0.17.0",
    "nodemon": "^2.0.12"
  }
}
